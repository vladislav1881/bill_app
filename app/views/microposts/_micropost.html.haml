%li
  %span.content= wrap(micropost.content)
  .photos
    - micropost.photos.each do |photo|
      = link_to_photo photo 
  %span.timestamp
    = t :posted
    = time_ago_in_words(micropost.created_at)
    = t :ago
  - if current_user?(micropost.user)
    = link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" }, title: micropost.content
